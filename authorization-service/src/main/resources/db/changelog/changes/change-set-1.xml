<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
	<changeSet author="Akasraei" id="1" context="ddl">
		<!-- SQUENCES -->
		<createSequence sequenceName="AUTHORITY_SEQUENCE" />
		<createSequence sequenceName="CLIENT_SEQUENCE" />

		<!-- TABLES -->
		<createTable tableName="AUTHORITIES">
			<column name="ID" type="BIGINT">
				<constraints primaryKey="true"
					primaryKeyName="AUTHORITIES_PK" />
			</column>
			<column name="REGISTER_DATE" type="timestamp" />
			<column name="UPDATE_DATE" type="timestamp" />
			<column name="AUTHORITY_NAME" type="VARCHAR(255)" />
			<column name="DESCRIPTION" type="VARCHAR(255)" />
			<column name="CLIENT_ID" type="BIGINT" />
		</createTable>

		<createTable tableName="CLIENTS">
			<column name="ID" type="BIGINT">
				<constraints primaryKey="true"
					primaryKeyName="CLIENTS_PK" />
			</column>
			<column name="REGISTER_DATE" type="timestamp" />
			<column name="UPDATE_DATE" type="timestamp" />
			<column name="CLIENT_NAME" type="VARCHAR(255)" />
			<column name="SECRET" type="VARCHAR(255)" />
		</createTable>

		<createTable tableName="AUTHORITIES_CLIENTS">
			<column name="AUTHORITY_ID" type="BIGINT">
				<constraints primaryKey="true"
					primaryKeyName="AUTHORITIES_CLIENTS_PK1" />
			</column>
			<column name="CLIENT_ID" type="BIGINT">
				<constraints primaryKey="true"
					primaryKeyName="AUTHORITIES_CLIENTS_PK2" />
			</column>
		</createTable>
		
		<createTable tableName="CLIENT_GRANT_TYPES">
			<column name="ID" type="BIGINT">
				<constraints primaryKey="true"
					primaryKeyName="CLIENT_GRANT_TYPES_PK1" />
			</column>
			<column name="REGISTER_DATE" type="timestamp" />
			<column name="UPDATE_DATE" type="timestamp" />
			<column name="TYPE_NAME" type="VARCHAR(255)" />
			<column name="CLIENT_ID" type="BIGINT" />
		</createTable>
		
		<createTable tableName="SCOPES">
			<column name="ID" type="BIGINT">
				<constraints primaryKey="true"
					primaryKeyName="SCOPES_PK1" />
			</column>
			<column name="REGISTER_DATE" type="timestamp" />
			<column name="UPDATE_DATE" type="timestamp" />
			<column name="SCOPE_NAME" type="VARCHAR(255)" />
			<column name="DESCRIPTION" type="BIGINT" />
		</createTable>
		

		<!-- FKs -->

		<addForeignKeyConstraint
			baseColumnNames="CLIENT_ID" baseTableName="AUTHORITIES"
			constraintName="FK_AUTHORITIES_CLIENTS" deferrable="false"
			initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
			referencedColumnNames="ID" referencedTableName="CLIENTS"
			validate="true" />

		<addForeignKeyConstraint
			baseColumnNames="CLIENT_ID" baseTableName="AUTHORITIES_CLIENTS"
			constraintName="FK_AUTHORITIES_CLIENTS_CLIENTS" deferrable="false"
			initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
			referencedColumnNames="ID" referencedTableName="CLIENTS"
			validate="true" />

		<addForeignKeyConstraint
			baseColumnNames="AUTHORITY_ID" baseTableName="AUTHORITIES_CLIENTS"
			constraintName="FK_AUTHORITIES_CLIENTS_AUTHORITIES"
			deferrable="false" initiallyDeferred="false" onDelete="NO ACTION"
			onUpdate="NO ACTION" referencedColumnNames="ID"
			referencedTableName="AUTHORITIES" validate="true" />
			
		<addForeignKeyConstraint
			baseColumnNames="CLIENT_ID" baseTableName="CLIENT_GRANT_TYPES"
			constraintName="FK_CLIENT_GRANT_TYPES_CLIENTS"
			deferrable="false" initiallyDeferred="false" onDelete="NO ACTION"
			onUpdate="NO ACTION" referencedColumnNames="ID"
			referencedTableName="CLIENTS" validate="true" />








	</changeSet>
</databaseChangeLog>
